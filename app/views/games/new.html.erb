<h1>New game</h1>

<ul>
  <% @letters.each do |letter| %>
    <li class='letter'><%= letter.upcase %></li>
  <% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label class="label" for="answer">What is the longest word you can find?</label><br>
  <input class="input" type="text" name="answer">
  <input type="hidden" name="grid" value="<%= @letters.join %>">
  <input class="btn" type="submit" value="Play!">
</form>
